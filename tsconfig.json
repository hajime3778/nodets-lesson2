{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES2015"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}